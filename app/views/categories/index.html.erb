<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Examples</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.examples %></td>
        <td><%= category.description %></td>
        <td><%= link_to t('action.show'), category %></td>
        <td><%= link_to t('action.edit'), edit_category_path(category) %></td>
        <td><%= link_to t('action.destroy'), category, method: :delete, data: { confirm: t('action.confirmation_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

